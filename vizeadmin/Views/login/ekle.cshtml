﻿@model vizeadmin.Models.Entity.ogrenciler

@{
    ViewBag.Title = "ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="ogrenci_ad" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="ogrenci_soyad" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Bölüm</label>
        <input type="text" class="form-control" name="ogrenci_bolum" />
    </div>

    <div style="margin-top:10px">
        <button class="btn btn-primary">Öğrenci Ekle</button>
    </div>
</form>