@using vizeadmin.Models.Entity;
@model List<ogrenciler>
@{
    ViewBag.Title = "ogrenciler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>

        <th>Öğrenci Adı</th>
        <th>Öğrenci Soyadı</th>
        <th>Öğrenci Bölüm</th>




    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.ogrenci_ad</td>
                <td>@ogr.ogrenci_soyad</td>
                <td>@ogr.ogrenci_bolum</td>
                
                
                <td>
                    <a href="~login/Sil/@ogr.ogrenci_id" class="btn btn-danger">Sil</a>
                    <a href="~/Ogrenci/OgrenciGetir/@ogr.ogrenci_id" class="btn btn-success">Guncelle</a>
                </td>

            </tr>
        }
    </tbody>
</table>


<a href="@Url.Action("ekle", "login")" class="btn btn-primary">Yeni Öğrenci Kaydı</a>

